<%- include('../partials/head', { title: 'Home - Register', styles: ['register'] }) %>
    
    <main>

        <div class="register-container">
            <img class="img-register" src="/img/img-register.jpg" alt="">
            <div class="container-form">
                <a href="/"><img class="logo-register" src="/img/logo-register.jpeg" alt="log"></a>
                <ul class="register-list">
                    <li class="nav-item"><button class="register-button"><a href="#">Signup</a></button></li>
                    <li class="nav-item"><button class="register-button"><a href="/user/login">Login</a></button></li>
                </ul>

                <form action="/user/register" method="POST" class="register-form">
                    <label for="userName">User name </label>
                    <input name="userName" class="register-input" type="text" placeholder="Enter first name">
                    <label for="email">Email adress</label>
                    <input name="email" class="register-input" type="email" placeholder="Enter email">
                    <label for="password">Password</label>
                    <input name="password" class="register-input" type="password" placeholder="Enter password">
                    <button class="create-button">Create account</button>

                </form>
            </div>

        </div>

    </main>
</body>

</html>